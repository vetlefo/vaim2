# NLP Service Configuration

# Server Configuration
PORT=3004
NODE_ENV=development

# Database Configuration
DB_HOST=nlp-postgres
DB_PORT=5434
DB_NAME=nlp
DB_USER=admin
DB_PASSWORD=admin

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Model Configuration
DEFAULT_LANGUAGE_MODEL=en_core_web_sm
ENABLE_ADVANCED_NER=false
BATCH_SIZE=32

# Processing Pipeline Configuration
MAX_TEXT_LENGTH=100000
ENABLE_COREFERENCE=false
ENABLE_DEPENDENCY_PARSING=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9465

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600
ENABLE_RESPONSE_CACHE=true